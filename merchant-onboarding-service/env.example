# Merchant Onboarding Service - Example Environment Variables

# Server
NODE_ENV=development
MERCHANT_ONBOARDING_PORT=4003

# Database (PostgreSQL)
# Option A: Full URI (overrides individual fields if set)
# MERCHANT_DB_URI=postgres://user:password@host:5432/dbname?sslmode=require

# Option B: Individual fields
MERCHANT_DB_HOST=localhost
MERCHANT_DB_PORT=5432
MERCHANT_DB_NAME=postgres
MERCHANT_DB_USER=postgres
MERCHANT_DB_PASSWORD=postgres
MERCHANT_DB_SSL=false

# JWT
JWT_SECRET=change_me_in_production
JWT_EXPIRES_IN=1d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Bcrypt
BCRYPT_ROUNDS=10

# Merchant OTP
MERCHANT_OTP_TTL_MIN=10

# SMTP (Email sending for OTP and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@fluencepay.com
ADMIN_EMAIL=admin@fluencepay.com

# Firebase Admin (for merchant OTP storage/verification)
# Replace newlines in private key with \n when placing in .env
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# External service URLs (adjust per deployment)
AUTH_SERVICE_URL=http://localhost:4001
NOTIFICATION_SERVICE_URL=http://localhost:4004
CASHBACK_SERVICE_URL=http://localhost:4003
